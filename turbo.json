{
  "$schema": "https://turbo.build/schema.json",

  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {},
    "db:migrate": {
      "dependsOn": ["db:generate"]
    }
  }
}
